@model IEnumerable<FinanceApp.Models.Expense>

<h1 class="mb-4">Expenses overview</h1>

<div class="container">
    <table class="table table-bordered">
        <thead class="table-light">
            <tr>
                <th>Description</th>
                <th>Amount</th>
                <th>Category</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Description</td>
                    <td>@item.Amount $</td>
                    <td>@item.Category</td>
                    <td>@item.Date.ToString("yyyy-MM-dd")</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="d-flex align-items-start">
    <canvas style="max-width: 450px; max-height:450px;" id="myChart"></canvas>

    <!-- pushed to the opposite side of the chart -->
    <ul id="chartPercentages" class="list-unstyled fs-6 mb-0 ms-auto mt-5 me-5 p-5"></ul>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
    const ctx = document.getElementById('myChart');
    const percentagesContainer = document.getElementById('chartPercentages');

    fetch('/Expenses/GetChart')
        .then(response => response.json())
        .then(data => {

            const totals = data.map(d => d.total);
            const labels = data.map(d => d.category);
            const sum = totals.reduce((a, b) => a + b, 0);

            labels.forEach((label, index) => {
                const percentage = ((totals[index] / sum) * 100).toFixed(1);

                const li = document.createElement('li');
                li.className = 'd-flex justify-content-between';
                li.innerHTML = `
                    <span>${label} :</span>
                    <strong class="ms-4">${percentage}%</strong>
                `;

                percentagesContainer.appendChild(li);
            });

            new Chart(ctx, {
                type: 'pie',
                data: {
                    labels: labels,
                    datasets: [{
                        data: totals
                    }]
                }
            });
        });
</script>
